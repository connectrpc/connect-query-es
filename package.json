    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "29.7.0",
    "jest-mock": "29.7.0",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "turbo": "^1.10.16",
    "typescript": "5.2.2"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "packageManager": "pnpm@8.6.7"
}
