{
  "private": true,
  "name": "root",
  "repository": "git@github.com:connectrpc/connect-query-es.git",
  "scripts": {
    "build": "turbo run build",
    "generate": "turbo run generate",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "pnpm run format:root && turbo run format",
    "attw": "turbo run attw",
    "check:spelling": "cspell \"**\" --gitignore",
    "all": "turbo run build generate format attw test",
    "update-all": "pnpm update --recursive --latest",
    "format:root": "pnpm run check:spelling && prettier \"*.js\" \"*.ts\" \"README.md\" --write --no-error-on-unmatched-pattern"
  },
  "license": "Apache-2.0",
  "licenseHeader": {
    "licenseType": "apache",
    "yearRange": "2021-2023",
    "copyrightHolder": "The Connect Authors"
  },
  "devDependencies": {
    "@bufbuild/license-header": "^0.0.4",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "8.12.2",
    "@typescript-eslint/parser": "8.12.2",
    "@typescript-eslint/utils": "8.12.2",
    "@vitest/ui": "^2.1.1",
    "cspell": "8.15.5",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-jsdoc": "50.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vitest": "0.5.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "3.3.3",
    "turbo": "^2.2.3",
    "typescript": "5.6.3",
    "vitest": "^2.1.4"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "packageManager": "pnpm@8.6.7"
}
